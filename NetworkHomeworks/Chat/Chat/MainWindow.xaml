      <DockPanel Height="100">
         <StackPanel>
            <Label Content="Ip adress" />
            <Label Content="Remote port" />
            <Label Content="Local port" />
         </StackPanel>
         <StackPanel>
            <TextBox
               Name="textBox2"
               Text="127.0.0.1" />
            <Separator Height="3" />
            <TextBox
               Name="textBox3"
               Text="9001" />
            <Separator Height="3" />
            <TextBox
               Name="textBox4"
               Text="9000" />
            <Separator Height="3" />
            <Button
               Name="button2"
               Click="button2_Click"
               Content="Save" />
         </StackPanel>
      </DockPanel>
      <RichTextBox
         x:Name="richTextBox1"
         Height="148"
         IsReadOnly="True"
         VerticalScrollBarVisibility="Auto" />
      <TextBox
         Name="textBox1"
         Height="50" />
      <Button
         x:Name="button1"
         Click="button1_Click"
         Content="Send"
         IsDefault="True" />
