<Window x:Class="TaskManager.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="DetailWindow" Height="300" Width="300">
   <Window.Resources>
      <local:MainWindow x:Key="MainWindowResource"></local:MainWindow>
   </Window.Resources>
    <Grid Name="grid" DataContext="{DynamicResource MainWindowResource}">
        <TextBox Text="{Binding Path=MyClassProperty.Name}"></TextBox>
    </Grid>
</Window>
